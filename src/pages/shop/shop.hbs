            <g filter="url(#filter0_d_1079_1104)">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M493.823 5.73975L18.1435 5.73975V3.61475L493.823 3.61475V5.73975Z" fill="#635C4C"/>
            <path d="M16 8.92725L4.79883 4.46368L16 0.000106812L20.33 4.46368L16 8.92725Z" fill="#635C4C"/>
            <path d="M496.33 8.92725L507.531 4.46368L496.33 0.000105858L492 4.46368L496.33 8.92725Z" fill="#635C4C"/>
