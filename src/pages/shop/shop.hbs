          </defs>
        </svg>
      </div>
      {{> "input/input" label="Поиск" type="text" name="search"}}
    </div>
    <div class="shop__list select-list search-list">
      {{> "product/product" title="Легендарный меч1" summ="9999" imgSrc="../../assets/img/products/mech.png" type="oruzhie"}}
      {{> "product/product" title="Легендарный меч2" summ="9999" imgSrc="../../assets/img/products/mech.png" type="dospehi"}}
      {{> "product/product" title="Легендарный меч3" summ="9999" imgSrc="../../assets/img/products/mech.png" type="craft"}}
      {{> "product/product" title="Легендарный меч4" summ="9999" imgSrc="../../assets/img/products/mech.png" type="money"}}
      {{> "product/product" title="Легендарный меч5" summ="9999" imgSrc="../../assets/img/products/heroy.png" type="oruzhie"}}
      {{> "product/product" title="Легендарный меч6" summ="9999" imgSrc="../../assets/img/products/heroy.png" type="dospehi"}}
      {{> "product/product" title="Легендарный меч7" summ="9999" imgSrc="../../assets/img/products/heroy.png" type="money"}}
