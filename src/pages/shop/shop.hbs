page-shop: 'true'
---
{{!< body }}
<main class="shop bg-common">
  <div class="container">
    <div class="shop-nav">
      <div class="shop-nav__types-wrapper">
        <div class="shop-nav__types select-switcher">
          <div class="buttons">
            <button id="" class="active">Все</button>
            <button id="oruzhie">Оружие</button>
            <button id="dospehi">Доспехи</button>
            <button id="craft">Крафт</button>
            <button id="money">Валюта</button>
          </div>
