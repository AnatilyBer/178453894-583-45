<a href="../../pages/product/product.hbs"  class="product {{#if sale}}sale{{/if}} {{#if bought}}bought{{/if}}" data-type="{{type}}">

  <svg class="product-bg product-bg-active" width="420" height="224" viewBox="0 0 420 224" fill="none" preserveAspectRatio="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M409.557 1.73354L419 11.0948L419 213.372L409.557 222.733L10.4427 222.733L1 213.372L1.00022 11.0946L10.4429 1.7334L409.557 1.73354Z" stroke="#FFC734" stroke-width="2"/>
  </svg>
  <div class="product-img img-wrapper">
    {{#if sale}}
      <div class="sale-date">
        <svg width="83" height="40" viewBox="0 0 83 40" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M0.197754 0.266602H82.8022V39.3616L41.5 32.5448L0.197754 39.3616V0.266602Z" fill="url(#paint0_linear_1428_382)"/>
